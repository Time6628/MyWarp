<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>me.taylorkelly</groupId>
    <artifactId>mywarp</artifactId>
    <version>2.6.6-SNAPSHOT</version>
    <packaging>jar</packaging>

    <!-- Project information -->
    <name>MyWarp</name>
    <inceptionYear>2011</inceptionYear>
    <url>http://dev.bukkit.org/server-mods/mywarp/</url>
    <description>MyWarp brings a social and dynamic warp-system to Bukkit</description>

    <licenses>
        <license>
            <name>GNU General Public License 3.0</name>
            <url>LICENSE.txt</url>
            <distribution>repo</distribution>
            <comments>License on MyWarp</comments>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git://github.com/TheE/MyWarp.git</connection>
        <developerConnection>scm:git:git@github.com:TheE/MyWarp.git</developerConnection>
        <url>https://github.com/TheE/MyWarp</url>
        <tag>master</tag>
    </scm>

    <properties> <!-- Fix encoding warnings -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>bukkit-repo</id>
            <url>http://repo.bukkit.org/content/groups/public/</url>
        </repository>

        <repository> <!-- Holds most permissions plugins -->
            <id>thee140-cloudbees-release</id>
            <url>http://repository-thee140.forge.cloudbees.com/release/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>dynmap-repo</id>
            <url>http://repo.mikeprimm.com</url>
        </repository>

        <repository>
            <id>vault-repo</id>
            <url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency> <!-- Bukkit implementation -->
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.7.2-R0.3</version>
        </dependency>

        <dependency><!-- Dynmap API -->
            <groupId>org.dynmap</groupId>
            <artifactId>DynmapCoreAPI</artifactId>
            <version>1.9</version>
        </dependency>

        <dependency> <!-- Part of the permission support -->
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <version>1.2.31</version>
        </dependency>

        <dependency> <!-- Part of the permission support -->
            <groupId>org.anjocaido</groupId>
            <artifactId>essentialsgroupmanager</artifactId>
            <version>2.10.1</version>
        </dependency>

        <dependency> <!-- Part of the permission support -->
            <groupId>ru.tehkode</groupId>
            <artifactId>permissionsex</artifactId>
            <version>1.19.6</version>
        </dependency>

        <dependency> <!-- Part of the permission support -->
            <groupId>de.bananaco</groupId>
            <artifactId>bpermissions</artifactId>
            <version>2.10.5</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.google-collections</groupId>
            <artifactId>google-collect</artifactId>
            <version>snapshot-20080530</version>
        </dependency>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.7.10-R0.1-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>install</defaultGoal>
        <finalName>${project.name}</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>plugin.yml</include>
                    <include>config.yml</include>
                    <include>mywarp_warp-32.png</include>
                </includes>
            </resource>
            <resource> <!-- Language files -->
                <targetPath>lang/</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/resources/</directory>
                <includes>
                    <include>mywarp_lang*.yml</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.3.2</version>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>

    </build>
</project>